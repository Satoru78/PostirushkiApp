<Window x:Class="PostirushkiApp.Views.Windows.StatusEditWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PostirushkiApp.Views.Windows"
        mc:Ignorable="d"
        Title="Фамилия И.О - Постирушки" Height="200" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Статус стирки" TextAlignment="Center"></TextBlock>
            <ComboBox Name="cmdStatus" Width="150"  Margin="0 20 0 0"></ComboBox>
            <Button Name="btnSaveStatus" Content="Изменить статус" Width="150" Margin="0 20 0 0"></Button>
        </StackPanel>
    </Grid>
</Window>
