<Window x:Class="PostirushkiApp.Views.Windows.UserAddWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PostirushkiApp.Views.Windows"
        mc:Ignorable="d"
        Title="UserAddWin" Height="350" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Добавление сотрудника" TextAlignment="Center" Margin="0 0 0 0"></TextBlock>
            <TextBox Text="Фамилия" Width="200" Margin="0 30 0 0"></TextBox>
            <TextBox Text="Имя " Width="200" Margin=" 0 15 0 0"></TextBox>
            <TextBox Text="Отчество " Width="200" Margin=" 0 15 0 0"></TextBox>
            <TextBox Text="Логин " Width="200" Margin=" 0 15 0 0"></TextBox>
            <TextBox Text="Пароль " Width="200" Margin=" 0 15 0 0"></TextBox>
            <CheckBox Content="Добавить с ролью Администратор" Margin="0 30 0 0"></CheckBox>
            <Button Content="Добавить нового сотрудника" Name="btnAddUser" Width="180" Click="btnAddUser_Click" Margin="0 30 0 0"></Button>
        </StackPanel>
    </Grid>
</Window>
