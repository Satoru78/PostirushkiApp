<Window x:Class="PostirushkiApp.Views.Windows.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PostirushkiApp.Views.Windows"
        mc:Ignorable="d"
        Icon="/Resource/icon.png"
        Title="Авторизация - Постирушки" Height="400" Width="500">
    <Grid>
        <Image Source="/Resource/logo.jpg" Width="100" Height="100" HorizontalAlignment="Left" Margin="20 0 0 0"/>
        <StackPanel Margin="-10 40 0 0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox Text="Введите логин" VerticalContentAlignment="Center" Name="txbLogin"  Width="200" Height="25"></TextBox>
            <PasswordBox Name="txbPass" Width="200" Height="25" Margin="0 20 0 0"></PasswordBox>

            <Button Content="Войти" Name="btnLogin" Click="btnLogin_Click" Width="100" Margin="0 30 0 0"></Button>
        </StackPanel>
    </Grid>
</Window>
