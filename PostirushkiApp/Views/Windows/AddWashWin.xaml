<Window x:Class="PostirushkiApp.Views.Windows.AddWashWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PostirushkiApp.Views.Windows"
        mc:Ignorable="d"
        Title="Фамилия И.О - Постирушки" Height="350" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" >
            <TextBlock Text="Добавление стирки" Margin="0 20 0 0" TextAlignment="Center"></TextBlock>
            <ComboBox HorizontalAlignment="Left" Width="200" Margin="0 20 0 0"></ComboBox>
            <ComboBox HorizontalAlignment="Left" Width="200" Margin="0 20 0 0"></ComboBox>

            <CheckBox Content="Сушка" Margin="0 30 0 0" HorizontalAlignment="Center"></CheckBox>

            <Button Content="Добавить новую стирку" Name="btnSaveWash" Width="160" Click="btnSaveWash_Click" Margin="0 40 0 0"></Button>
            <Button Content="Напечать чек" Name="btnCheckSave" Click="btnCheckSave_Click" Width="160" Margin="0 30 0 0"></Button>
        </StackPanel>
    </Grid>
</Window>
